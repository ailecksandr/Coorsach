.col-lg-6
  .well.sidebar-nav.formulas
    = form_tag :action => :comparator do
      .form-group
        = label_tag t(:calculate_title)
        .row
          = text_field_tag :first_formula, params[:first_formula], { placeholder: t(:calculate_first_formula), class: 'form-control' }
          = text_field_tag :second_formula, params[:second_formula], { placeholder: t(:calculate_second_formula), class: 'form-control' }
      .form-group
        = label_tag t(:calculate_filename_title), nil, class: 'control-label'
        = text_field_tag :file_name, params[:file_name], { placeholder: t(:calculate_filename), class: 'form-control' }
      .modal-footer
        %br
        = submit_tag t(:calculate_accept), :class => 'btn btn-primary'

- unless @formulas.nil?
  .col-lg-6
    .well.sidebar-nav.results
      .form-group.expression
        - @formulas[0].variables.each_pair do |key, value|
          = label_tag nil, key + ': ' + value, class: 'variables'
        .form-group.result-container
          = label_tag @formulas[0].view
          %h1.result-calc
            = @formulas[0].result
      .form-group.expression
        - @formulas[1].variables.each_pair do |key, value|
          = label_tag nil, key + ': ' + value, class: 'variables'
        .form-group.result-container
          = label_tag @formulas[1].view
          %h1.result-calc
            = @formulas[1].result